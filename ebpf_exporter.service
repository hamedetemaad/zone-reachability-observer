[Unit]
Description=eBPF Exporter
Wants=network-online.target
After=network-online.target

[Service]
User=root
Type=simple
WorkingDirectory=/usr/local/bin/ebpf_exporter
ExecStart=/usr/local/bin/ebpf_exporter/ebpf_exporter --config.dir=. --config.names=xdp  
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
